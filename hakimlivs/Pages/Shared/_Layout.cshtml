@using hakimlivs.Models
@inject ApplicationDbContext database
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hakim Livs</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/js/site.js" defer></script>
    <script src="https://kit.fontawesome.com/8c6cf5ad63.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <a class="hakim-title" asp-area="" asp-page="/Index">Hakim Livs</a>
        <form method="post" class="searchbox" asp-page-handler="search">
            <input type="search" name="SearchTerm" id="SearchTerm" placeholder="Sök efter en vara..." />
            <button type="submit" class="search-button">Sök</button>
        </form>
        @if (User.IsInRole("Basic"))
        {
            <button type="submit" class="go-to-cart">
                <a asp-area="" asp-page="/UserCart/Index">Till din varukorg</a>
            </button>
        }
    </header>

    <main class="content">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            &copy; 2022 - hakimlivs - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>