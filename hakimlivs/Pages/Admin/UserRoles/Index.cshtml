@page
@model hakimlivs.Pages.Admin.UserRoles.IndexModel

@{
    ViewData["Title"] = "User Roles";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="area-page">
    <div class="row">
        <h4>Kunder</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.UserRolesViewModel)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@string.Join(" , ", user.Roles.ToList())</td>
                        <td>
                            <a class="role-link" asp-page="/Admin/UserRoles/Manage" asp-route-userId="@user.UserId">Ändra roller</a> |
                        </td>
                        <td>
                            <a class="role-link" asp-page="/Orders/Index" asp-route-id="@user.UserId">Ordrar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>