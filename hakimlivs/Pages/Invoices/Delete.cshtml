@page
@model hakimlivs.Pages.Invoices.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="area-page">
    <div class="row">
        <h3>Vill du verkligen ta bort fakturan?</h3>
        <div style="margin-left: 20px;">
            <h4>Faktura</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Invoice.OrderId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Invoice.OrderId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Invoice.UserId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Invoice.UserId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Invoice.PrintDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Invoice.PrintDate)
                </dd>
            </dl>
    
            <form method="post">
                <input type="hidden" asp-for="Invoice.Id" />
                <button type="submit" class="role-link-button">Ta bort</button>
            </form>
            <a class="role-link" asp-page="./Index">Back to List</a>
        </div>
    </div>
</div>